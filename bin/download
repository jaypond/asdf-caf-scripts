#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

DOWNLOAD_PATH=$(get_download_path $RELEASE_NAME $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION)
mkdir -p "$DOWNLOAD_PATH"

release_file="$DOWNLOAD_PATH/$RELEASE_NAME-${ASDF_INSTALL_VERSION//\//-}).tar.gz"

# Download tar.gz file to the download directory
download_release "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$release_file"

#  Extract contents of tar.gz file into the download directory
tar -xzf "$release_file" -C "$DOWNLOAD_PATH" --strip-components=1 || fail "Could not extract $release_file"

# Remove the tar.gz file since we don't need to keep it
rm "$release_file"